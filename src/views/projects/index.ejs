<div class="all-projects-header-container">
  <a href="/projects">
    <span class="back-arrow">
      <ion-icon name="arrow-back-circle-outline"></ion-icon>
    </span>
  </a>
  <h1>All projects</h1>
</div>
<div class="added-projects-container">
  <% if (projects.length > 0) { %>
    <% projects.forEach(project => { %>
      <div class="project-container">
        <div class="project-inner-container">
          <h3><%= project.title.toUpperCase() %></h3>
          <% users.forEach(user => {%>
            <% if (project.user == user.id) { %>
              <p class="small"><strong class="white-text">Owner:</strong> <%= user.firstName %> <%= user.lastName %></p>
            <% } %>
          <% }) %>
          <p class="description description-small-font-size"><% if ( project.description.length > 200) { %>
            <%= project.description.substring(0, 150) + '...' %>
          <% } else { %>
            <%= project.description %>
          <% } %></p>
          <div class="project-edit-delete-button-container">
            <a class="edit-button" href="/users/<%= project.user %>">View User</a>
            <a class="visit-anchor" href="<%= project.link %>" target="_blank">
              <span class="link-span"><ion-icon name="paper-plane-outline"></ion-icon></span>
              Visit</a>
            <!-- <%- include("../partials/deleteForm.ejs", { url: `/projects/${project.id}`}) %> -->
          </div>
        </div>
      </div>
    <% }) %>
  <% } else { %>
    <h3>No Projects Available!</h3>
  <% } %>
</div> 